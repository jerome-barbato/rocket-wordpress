{
    "name":"metabolism/rocket-wordpress",
    "license": "AGPL-3.0",
    "version":"1.2.0",
    "description": "Wordpress Scaffolder using Rocket Framework",
    "config": {
        "preferred-install": "dist",
        "secure-http": false
    },
    "repositories": [
        { "type": "composer", "url": "https://wpackagist.org"},
        { "type": "composer",
            "url": "http://138.68.98.121:56000/"}
    ],
    "require": {
        "php" : ">=5.5.0",
        "johnpbloch/wordpress": "^1.5",
        "mustangostang/spyc": "^0.6.1",
        "symfony/routing":"^3.2",
        "dflydev/dot-access-data": "^1.0",
        "wpackagist-plugin/cache-enabler": "*",
        "wpackagist-plugin/timber-library": "*",
        "elliotcondon/advanced-custom-fields-pro": "5.*",
        "wpackagist-plugin/post-types-order": "*"
    },
    "extra": {
        "file-management": {
            "create": {
                "metabolism/rocket-wordpress": {
                    "app/cms/uploads": 777,
                    "app/resources/acf": 777
                }
            },
            "symlink": {
                "metabolism/rocket-wordpress": {
                    "wp-config.php": "web/edition/wp-config.php",
                    "src/theme": "app/cms/themes/rocket",
                    "doc": "doc/wordpress",
                    "src/Helper/Rocket.php": "app/cms/mu-plugins/Rocket.php",
                    "../../../app/cms/uploads": "web/upload"
                }
            },
            "copy": {
            },
            "remove": {
                "metabolism/rocket-wordpress": [
                    "web/edition/wp-content",
                    "app/config/silex.yml",
                    "web/edition/wp-config-sample.php"
                ]
            }
        },
        "branch-alias": {
            "dev-dev": "1.2.x-dev"
        }
    },
    "autoload"    : {
        "psr-4" : {
            "Rocket\\" : "src/"
        }
    }
}
