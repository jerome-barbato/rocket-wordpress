{
  "name":"metabolism/rocket-wordpress",
  "license": "AGPL-3.0",
  "version": "1.3.0",
  "description": "Wordpress Scaffolder using Rocket Framework",
  "require": {
    "php" : ">=5.6.0",
    "metabolism/rocket-installer": "1.1.*",
    "metabolism/rocket-kernel": "1.2.*",
    "johnpbloch/wordpress-core": "4.9.*",
    "mustangostang/spyc": "0.6.*",
    "symfony/routing":"3.2.*",
    "dflydev/dot-access-data": "1.0.*",
    "wpackagist-plugin/cache-enabler": "1.2.*",
    "wpackagist-plugin/timber-library": "1.5.*",
    "wpackagist-plugin/clean-image-filenames": "1.*",
    "elliotcondon/advanced-custom-fields-pro": "5.*",
    "wpackagist-plugin/post-types-order": "1.9.*"
  },
  "extra": {
    "post-package-install": {
      "create": {
        "metabolism/rocket-wordpress": {
          "src/WordpressBundle/uploads": 777,
          "src/WordpressBundle/languages": 777,
          "src/WordpressBundle/acf-json": 777
        }
      },
      "copy": {
        "metabolism/rocket-wordpress": {
          "src/theme": "src/WordpressBundle/themes/rocket",
          "src/Helper/Rocket.php": "src/WordpressBundle/mu-plugins/Rocket.php",
          "doc": "doc/wordpress",
          "wp-config.php": "web/wp-config.php",
          "doc/wordpress.yml.sample": "config/wordpress.yml"
        }
      },
      "remove": {
        "metabolism/rocket-wordpress": [
          "config/silex.yml"
        ],
        "johnpbloch/wordpress-core": [
          "wp-content",
          "wp-config-sample.php"
        ]
      }
    },
    "post-package-update": {
      "remove": {
        "johnpbloch/wordpress-core": [
          "wp-content",
          "wp-config-sample.php"
        ]
      },
      "copy": {
        "metabolism/rocket-wordpress": {
          "src/theme": "src/WordpressBundle/themes/rocket",
          "src/Helper/Rocket.php": "src/WordpressBundle/mu-plugins/Rocket.php",
          "doc": "doc/wordpress"
        }
      }
    },
    "branch-alias": {
      "dev-1.3.x": "1.3.x-dev",
      "dev-1.2.x": "1.2.x-dev",
      "dev-1.1.x": "1.1.x-dev",
      "dev-1.0.x": "1.0.x-dev"
    }
  },
  "autoload"    : {
    "psr-4" : {
      "Rocket\\" : "src/"
    }
  }
}
